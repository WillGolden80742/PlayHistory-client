<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayouPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="410dp"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_nome_logo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SearchView
                android:id="@+id/urlInput"
                android:layout_width="355dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:queryHint="@string/pesquisa" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <ListView
                android:id="@+id/monumentosLista"
                android:layout_width="341dp"
                android:layout_height="405dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="431dp"
            android:layout_height="82dp">

            <TextView
                android:id="@+id/coordenada"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:paddingTop="10dp"
                android:text="@string/coordenada"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="92dp">

            <EditText
                android:id="@+id/metroNumber"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                android:ems="0"
                android:inputType="number"
                android:text="200" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/playAudio"
                    style="@style/play"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    app:srcCompat="@android:drawable/ic_media_play"
                    tools:ignore="SpeakableTextPresentCheck" />

                <SeekBar
                    android:id="@+id/seekAudio"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>